ninja_required_version = 1.3
cxx = c++
nvcc = /usr/local/cuda/bin/nvcc

cflags = -DTORCH_EXTENSION_NAME=cc_edge -DTORCH_API_INCLUDE_EXTENSION_H -isystem /home/mdxu/anaconda3/lib/python3.7/site-packages/torch/include -isystem /home/mdxu/anaconda3/lib/python3.7/site-packages/torch/include/torch/csrc/api/include -isystem /home/mdxu/anaconda3/lib/python3.7/site-packages/torch/include/TH -isystem /home/mdxu/anaconda3/lib/python3.7/site-packages/torch/include/THC -isystem /usr/local/cuda/include -isystem /home/mdxu/anaconda3/include/python3.7m -D_GLIBCXX_USE_CXX11_ABI=1 -fPIC -std=c++11
cuda_flags = -DTORCH_EXTENSION_NAME=cc_edge -DTORCH_API_INCLUDE_EXTENSION_H -isystem /home/mdxu/anaconda3/lib/python3.7/site-packages/torch/include -isystem /home/mdxu/anaconda3/lib/python3.7/site-packages/torch/include/torch/csrc/api/include -isystem /home/mdxu/anaconda3/lib/python3.7/site-packages/torch/include/TH -isystem /home/mdxu/anaconda3/lib/python3.7/site-packages/torch/include/THC -isystem /usr/local/cuda/include -isystem /home/mdxu/anaconda3/include/python3.7m -D_GLIBCXX_USE_CXX11_ABI=1 -D__CUDA_NO_HALF_OPERATORS__ -D__CUDA_NO_HALF_CONVERSIONS__ -D__CUDA_NO_HALF2_OPERATORS__ --expt-relaxed-constexpr -gencode=arch=compute_75,code=sm_75 --compiler-options '-fPIC' --expt-extended-lambda -std=c++11
ldflags = -shared -L/usr/local/cuda/lib64 -lcudart

rule compile
  command = $cxx -MMD -MF $out.d $cflags -c $in -o $out
  depfile = $out.d
  deps = gcc

rule cuda_compile
  command = $nvcc $cuda_flags -c $in -o $out

rule link
  command = $cxx $in $ldflags -o $out

build cc_edge.cuda.o: cuda_compile /home/mdxu/exp/pytorch-segmentation-toolbox/networks/cc_edge/src/cc_edge.cu

build cc_edge.so: link cc_edge.cuda.o

default cc_edge.so

